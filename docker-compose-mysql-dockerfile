FROM mysql:5.7.22

LABEL maintainer="aminusia <aminusia@gmail.com>"

VOLUME /var/lib/mysql

COPY docker-config/mysql/docker-entrypoint.sh /usr/local/bin/
RUN ln -s usr/local/bin/docker-entrypoint.sh /entrypoint.sh # backwards compat
ENTRYPOINT ["docker-entrypoint.sh"]

EXPOSE 3306 33060

CMD ["mysqld"]